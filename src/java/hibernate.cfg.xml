<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.ast.ASTQueryTranslatorFactory</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5434/DOR2</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="models.entities.Admin"/>
    <mapping class="models.entities.Company"/>
    <mapping class="models.entities.Person"/>
    <mapping class="models.entities.PersonCompanySituation"/>
    <mapping class="models.entities.PersonCompanySituationId"/>
    <mapping class="models.entities.PersonCompanySituationLog"/>
  </session-factory>
</hibernate-configuration>
